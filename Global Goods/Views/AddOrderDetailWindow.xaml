<Window x:Class="Global_Goods.Views.AddOrderDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Order Detail" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Product:"/>
            <ComboBox x:Name="ProductComboBox" DisplayMemberPath="ProductName" Margin="0,0,0,10"/>

            <TextBlock Text="Quantity:"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Click="SaveButton_Click" Width="75" Margin="5,0"/>
                <Button Content="Cancel" Click="CancelButton_Click" Width="75" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
